container_commands:
  01_cron_job:
    command: "cat .ebextensions/cron_job.txt > /etc/cron.d/my_cron_job && chmod 644 /etc/cron.d/my_cron_job"
files:
  "/var/www/html/my-cron-job.sh":
    mode: "000755"
    owner: ec2-user
    group: ec2-user
    content: |
      #!/bin/bash
      php /var/app/current/artisan my:command
